{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "declarationDir": "dist/types",
    "noUnusedParameters": true,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "dist",
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./",
    "types": ["node"]
  },
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/browser/**/*",
    "src/server/**/*",
    "prebuild.ts"
  ]
}